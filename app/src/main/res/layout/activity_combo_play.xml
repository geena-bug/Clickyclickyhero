<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="15dp">

    <TextView
        android:id="@+id/combo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/combo_title"
        tools:layout_editor_absoluteX="-16dp">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="120dp"
            android:layout_height="47dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            tools:src="@drawable/up_arrow" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="120dp"
            android:layout_height="47dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            tools:src="@drawable/down_arrow" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="120dp"
            android:layout_height="47dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            tools:src="@drawable/right_arrow" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="120dp"
            android:layout_height="47dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            tools:src="@drawable/left_arrow" />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="120dp"
            android:layout_height="47dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            tools:src="@drawable/up_arrow" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="591dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="139dp">

        <ImageButton
            android:id="@+id/topBtn"
            android:layout_width="107dp"
            android:layout_height="109dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.334"
            app:srcCompat="@drawable/up_arrow" />

        <ImageButton
            android:id="@+id/leftBtn"
            android:layout_width="107dp"
            android:layout_height="109dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topBtn"
            app:srcCompat="@drawable/left_arrow" />

        <ImageButton
            android:id="@+id/rightBtn"
            android:layout_width="107dp"
            android:layout_height="109dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topBtn"
            app:srcCompat="@drawable/right_arrow" />

        <ImageButton
            android:id="@+id/downBtn"
            android:layout_width="107dp"
            android:layout_height="109dp"
            android:layout_marginTop="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topBtn"
            app:srcCompat="@drawable/down_arrow" />

        <Button
            android:id="@+id/cont_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Continue"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/downBtn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>